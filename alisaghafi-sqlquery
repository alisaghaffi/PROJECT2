 select * from movie_tb
 limit 10

 select * from link_tb
 limit 10
    
 select * from rating_tb
 limit 10
 
 select * from genre_tb
 limit 10
 
create view movie_by_rating AS 
SELECT movie_tb.id, movie_tb.budget, movie_tb.title, movie_tb.release_date , movie_tb.revenue , movie_tb.vote_average 
FROM movie_tb
inner JOIN rating_tb
ON   movie_tb.id  = rating_tb.rating 


create view movie_by_geners AS 
SELECT movie_tb.id, movie_tb.budget, movie_tb.title, movie_tb.release_date , movie_tb.revenue , movie_tb.vote_average ,genre_tb.genre
FROM movie_tb
inner JOIN genre_tb
ON   movie_tb.id  = movie_tb.id;

create view movie_by_rating_geners AS 
SELECT movie_tb.id, movie_tb.budget, movie_tb.title, movie_tb.release_date , movie_tb.revenue , movie_tb.vote_average ,genre_tb.genre
FROM movie_tb
inner JOIN rating_tb
ON   movie_tb.id  = rating_tb.rating 
inner JOIN genre_tb
ON   movie_tb.id  = movie_tb.id;

select * from movie_by_rating_geners
limit 10